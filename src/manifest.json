{
  "manifest_version": 3,
  "name": "Yahoo! Japan Elements Cleaner",
  "description": "選択したYahoo! Japanのトップページ項目を非表示にできます",
  "version": "1.0",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
	"storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon16.png"
  },
  "content_scripts": [
    {
      "js": ["remover.js"],
      "matches": [
        "https://www.yahoo.co.jp/*"
      ]
    }
  ]
}